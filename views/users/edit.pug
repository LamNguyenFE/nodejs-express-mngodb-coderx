extends ../layouts/common.pug
block content
    h1 Users Edit

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/edit/"+user.id, method="POST", enctype="multipart/form-data")
        form-group
            label(for="name") Name
            input.form-control(type="text", name = "name", value=values? values.name :user.name )
            small.form-text.text-muted Type your name
        form-group
            label(for="phone") Phone
            input.form-control(type="text", name = "phone", value=values? values.phone :user.phone )   
            small.form-text.text-muted Something
        form-group
            label(for="avatar") Avatar
            input.form-control(type="file", name = "avatar", value=values? values.avatar :'')   
            small.form-text.text-muted Choose you avatar
            img.img-fluid(src= '/'+user.avatar&&user.avatar)
        p
        form-group       
            button.btn.btn-primary(type="submit") Edit
